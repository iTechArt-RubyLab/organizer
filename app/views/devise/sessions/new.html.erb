<div class="card-cont bg-custom-color shadow mt-4 rounded">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading text-center"><%= t('global.login') %></h2>
    <div class="field text-card">
    <%= f.label t('data.email') %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('data.email')  %>
  </div>
  <div class="field text-card">
    <%= f.label t('data.password') %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('data.password') %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('data.remember') %>
    </div>
  <% end %>
  <div class="actions text-center mt-3">
    <%= f.submit t('global.login'), class: 'btn btn-lg btn-success btn-block' %>
  </div>
<% end %>
</div>
<div class="text-center mt-4">
  <%= render "devise/shared/links" %>
</div>
