<h1><%= t('main.services') %></h1>

<table>
  <thread>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Price</th>
      <th colspan="2"></th>
    </tr>
  </thread>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.description %></td>
        <td><%= service.duration %></td>
        <td><%= service.price %></td>
        <td><%= link_to t('main.book'), new_booking_path %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_company_service_path(@company, service) %></td>
          <%= link_to 'New Service', new_company_service_path(@company) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <nav class="pagination-outer" aria-label="Page navigation">
    <ul class="pagination mt-5 pt-5">
      <li>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      </li>
    </ul>
  </nav>
</div>
