<div class="text-center m-2 p-2">
<h1><%= t('main.services') %></h1>
</div>
<div class="d-flex justify-content-end m-2 p-2">
<%= simple_form_for :term, url: search_company_services_path(@company), method: :get do |form| %>
  <p>
    <%= text_field_tag :term, params[:term], placeholder:"Search", class:"border border-blue-500 rounded p-2" %>
    <%= submit_tag t('global.search'), name: nil, class:"btn btn-outline-success" %>
  </p>
<% end %>
</div>
<div class="bg-custom-color text-center m-2 p-2">
  <% @services.each do |service| %>
    <div class="row">
      <div class="col-6 p-2">
        <% if service.image.attached? %>
          <%= image_tag service.image, style: 'width:600px; height:350px;' %>
        <% end %>
      </div>
      <div class="col-6">
        <p class="fs-2 text-decoration-underline m-2"><%= service.name %></p>
        <p class="fst-italic fs-5 p-2"><%= service.description %></p>
        <p class="fw-light fs-5 ">The price: <%= service.price %> BYN for <%= service.duration %> minutes of booking.</p>
        <%= link_to t('main.book'), new_booking_path, class: "btn btn-warning btn-lg px-4 m-3 me-sm-3 fw-bold" %>
        <br>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_company_service_path(@company, service), class: "btn btn-success btn-lg px-4 m-3 me-sm-3 fw-bold" %></td>
          <%= link_to 'New', new_company_service_path(@company), class: "btn btn-success btn-lg px-4 m-3 me-sm-3 fw-bold" %>
        <% end %>
  <% end %>
  </div>
  </div>
</div>

<div>
  <nav class="pagination-outer" aria-label="Page navigation">
    <ul class="pagination mt-3 pt-3">
      <li>
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      </li>
    </ul>
  </nav>
</div>
